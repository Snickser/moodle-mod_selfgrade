<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/selfgrade/db" VERSION="2025060300" COMMENT="Selfgrade module DB">
  <TABLES>
    <TABLE NAME="selfgrade" COMMENT="Main table for selfgrade activity">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="grade" TYPE="number" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
	<FIELD NAME="gradepass" TYPE="number" LENGTH="10" NOTNULL="false" DEFAULT="0"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
	<FIELD NAME="printintro" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0"/>
	<FIELD NAME="content" TYPE="text" NOTNULL="false"/>
	<FIELD NAME="answer" TYPE="text" NOTNULL="false"/>
	<FIELD NAME="random" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0"/>
	<FIELD NAME="contentformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="selfgrade_submissions" COMMENT="Submissions from students">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="selfgradeid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="text" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="grade" TYPE="number" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
